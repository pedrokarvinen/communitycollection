<div class="row">
  <div class="span9">
    <h1>Brands</h1>
  </div>
  <div class="span3 link-new">
    <a href="/admin/brands/new" class="btn btn-primary">New Brand</a>
  </div>
</div>
<% if @brands %>
<table class="index table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
  	
    <% @brands.each do |brand| %>
      <tr>
      <td><a href="/admin/brands/<%= brand.id %>"><%= brand.name%></a></td>
        <td>
          <a class="btn btn-mini" target="_blank" href="/discover/by-brand/<%= brand.slug %>">view</a>
          <a class="btn btn-mini" href="/admin/brands/<%= brand.id %>/initiatives">initiatives</a>
          <a class="btn btn-mini" href="/admin/brands/<%= brand.id %>">edit</a>
          <form action="/admin/brands/delete/<%= brand.id %>"  method="post" class="form-inline" onsubmit="return confirm('Are you sure you wish to delete this brand?');">
            <input type="hidden" name="_method" value="delete">
            <input class="btn btn-mini btn-danger" type="submit" value="delete">
          </form>
        </td>
      </tr>
    <% end %>
		
  </tbody>
</table>
<% else %>
	<p>No brands now!</p>
<% end %>
