<h1>New Category</h1>
<form class="form-horizontal" enctype="multipart/form-data" action="/admin/brands/<%= @brand.id %>/categories/create" method="post">
  	<% unless @category.errors.blank? %>
	  <div class="alert">
	    <button class="close" data-dismiss="alert">Ã—</button>
	    <strong>Warning!</strong> The category could not be saved because of the following errors:
	    <ul>
	      <% @category.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<fieldset>
		<div class="control-group">
	    <label class="control-label" for="category[cat_id]">Real Category ID</label>
	    <div class="controls">
	      <input type="text" class="input-xlarge" name="category[cat_id]" value="<%= @category.cat_id %>">
	    </div>
	  </div>
	  <div class="control-group">
	    <label class="control-label" for="category[name]">Name</label>
	    <div class="controls">
	      <input type="text" class="input-xlarge" name="category[name]" value="<%= @category.name %>">
	    </div>
	  </div>
	  <div class="control-group">
	    <label class="control-label" for="name">Kind <br/> (category or collection)</label>
	    <div class="controls">
	      <select id="category-kind" class="input-xlarge" name="category[kind]">
	      	<option value="category">Category</option>
	      	<option value="collection">Collection</option>
	      </select>
	    </div>
	  </div>
	  <div class="control-group">
	    <label class="control-label" for="category[genre]">Genre</label>
	    <div class="controls">
	      <select id="category-genre" class="input-xlarge" name="category[genre]">
	      	<option value="man">Men</option>
	      	<option value="women">Women</option>
	      </select>
	    </div>
	  </div>
	  
	  <div class="control-group">
	    <label class="control-label" for="category[parent_id]">Parent ID</label>
	    <div class="controls">
	      <select id="category-genre" class="input-xlarge" name="category[parent_id]">
	      	<option value="0">No Parent</option>
	   	<% 
	   	if @categories
	   		@categories.each do |cat|
	   			if cat['parent_id'] == 0 
	   	%>
	      	<option value="<%= cat['id'] %>"><%= cat['name'] + '(' + cat['genre'] + ')' %></option>
	    <%
	    		end
	    	end
	    end
	    %>
	      </select>
	    </div>
	  </div>
	  
	</fieldset>
	<div class="form-actions">
	  <button type="submit" class="btn btn-primary">Save changes</button>
	  <a href="/admin/brands/<%= @brand.id %>/categories" class="btn">Cancel</a>
	</div>

</form>
