<% content_for :after_scripts do %>
  
  <script>
    $(function(){
      CC.load_background("discover-background-gray-to-white.jpg");

      $('body').addClass('shop');

      $('#shop-header').fadeTo(0,0);

      window.onload = function(){
        $('#shop-header').fadeTo(1000,1);
      }

      var shopSlider = $('#shop-main-slider');

      $(window).resize(function(){

        var pos = (($(window).width()*.5) - (shopSlider.width()*.5))

        if(window.sliderIdx == 0){pos += 967}
        if(window.sliderIdx == 1){}
        if(window.sliderIdx == 2){pos -= 963}

        shopSlider.css(
          'margin-left', pos
        );
      });

      $(window).resize();

      var snapped = false;

      $(window).scroll(function () { 

        if(!snapped){
          
          if($(window).scrollTop() > 510) {
            
            snapped = true;
            
            $('#shop-header').hide(100);
            $("html, body").animate({scrollTop : 0}, 1500).removeClass('shop');
          }
        }

      });

      var ShopSlideshow = function(){
        
        var buttons = $('#shop-main-slider-wrapper li a');
        var slider = $('#shop-main-slider');
        var idx = 0;
        var locked = false;
          
        buttons.on('click', function(e){

          e.stopPropagation();
          e.preventDefault();

          if(!locked){

            locked = true;

            window.sliderIdx = idx = buttons.index($(this));

            buttons.removeClass('selected').eq(idx).addClass('selected');

            var center = ($(window).width()*.5) - (slider.width()*.5)

            if(idx == 0) {
              center += 967
            }
            if(idx == 1)Â {
              
            } 
            if(idx == 2) {
              center -= 963
            }

            slider.animate({
              marginLeft : center
            }, 1000, 'easeInOutExpo', function(){
              locked = false;
            });  
          }

        })

        buttons.eq(1).click();

      }();

      var ToggleGrid = function(){
        var button = $('#fiter-toggle');
        var items = $('.quarter-column');
        var items_wrapper = $('.items-wrapper');
        var items_description = $('.item-description');

        button.on('click', function(){
          items.toggleClass('condensed');
          items_wrapper.toggleClass('condensed');
          items_description.toggleClass('condensed');
        })


      }();


      var ShowDetailPanel = function(){
        var buttons = $('.shop-item-wrapper').on('click', function(e){
          e.preventDefault();
          e.stopPropagation();
          
          var target = $(this).data('target');
          var items_row = $(this).parent().parent();
          var isShowed = false;
          
          if($('.' + target).is(':visible') == true){
          	$('.' + target).animate({
	            height: 'toggle'
	          },1000, 'easeInOutQuint');
	          
	          return;
          }
          
 
          items_row.find('.item-description').each( function(){
          	if($(this).is(':visible') == true){
          		isShowed = true;
          		$(this).animate({
		            height: 'toggle'
		          },1000, 'easeInOutQuint', 
		          function(){
		          	$('.' + target).animate({
			            height: 'toggle'
			          },1000, 'easeInOutQuint');
			          
		          });
	          }
          } );
          
          if(isShowed == false){
          	$('.' + target).animate({
	            height: 'toggle'
	          },1000, 'easeInOutQuint');
          }
          
          //$('html,body').animate({scrollTop: $('.' + target).offset().top}, 500);
          
          /*$(this).parent().parent().find('.item-description').animate({
            height: 'toggle'
          },1000, 'easeInOutQuint');
	        
          
          
          $(this).parent().parent().find('.quarter-column').find('h5').animate({
            height: 'toggle'
          },1000, 'easeInOutQuint');
          $(this).parent().parent().find('.quarter-column').find('h4').animate({
            height: 'toggle'
          },1000, 'easeInOutQuint');
          $(this).parent().parent().find('.quarter-column').find('h3').animate({
            height: 'toggle'
          },1000, 'easeInOutQuint');*/
         
          
          //$(this).parent().parent().find('.triangle').toggleClass('description-view');

        });
        
        // close the description view
        $('.item-description .close-icon').on('click', function(e){
        	e.preventDefault();
          e.stopPropagation();
          
        	$(this).parent().animate({
            height: 'toggle'
          },1000, 'easeInOutQuint');
        });
      }();
      


    });
  </script>

<% end %>



